{% if homedir == "nfsfiles" %}

resource nfsFilesStorageAccount 'Microsoft.Storage/storageAccounts@2021-09-01' = {
  name: 'nfsfiles${resourcePostfix}'
  location: location
  sku: {
    name: 'Premium_LRS'
    tier: 'Premium'
  }
  kind: 'FileStorage'
  properties: {
    dnsEndpointType: 'Standard'
    defaultToOAuthAuthentication: false
    publicNetworkAccess: 'Enabled'
    allowCrossTenantReplication: false
    minimumTlsVersion: 'TLS1_2'
    allowBlobPublicAccess: true
    allowSharedKeyAccess: true
    largeFileSharesState: 'Enabled'
    networkAcls: {
      resourceAccessRules: []
      bypass: 'AzureServices'
      virtualNetworkRules: [
        {
          id: adminSubnet.id
          action: 'Allow'
          state: 'Succeeded'
        }
        {
          id: computeSubnet.id
          action: 'Allow'
          state: 'Succeeded'
        }
        {
          id: frontendSubnet.id
          action: 'Allow'
          state: 'Succeeded'
        }
      ]
      ipRules: []
      defaultAction: 'Deny'
    }
    supportsHttpsTrafficOnly: false
    encryption: {
      requireInfrastructureEncryption: false
      services: {
        file: {
          keyType: 'Account'
          enabled: true
        }
        blob: {
          keyType: 'Account'
          enabled: true
        }
      }
      keySource: 'Microsoft.Storage'
    }
    accessTier: 'Hot'
  }
}

resource nfsFilesFileServices 'Microsoft.Storage/storageAccounts/fileServices@2021-09-01' = {
  parent: nfsFilesStorageAccount
  name: 'default'
  sku: {
    name: 'Premium_LRS'
    tier: 'Premium'
  }
  properties: {
    protocolSettings: {
      smb: {
        multichannel: {
          enabled: false
        }
      }
    }
    cors: {
      corsRules: []
    }
    shareDeleteRetentionPolicy: {
      enabled: true
      days: 7
    }
  }
}

resource nfsFilesHome 'Microsoft.Storage/storageAccounts/fileServices/shares@2021-09-01' = {
  parent: nfsFilesFileServices
  name: 'nfshome'
  properties: {
    accessTier: 'Premium'
    shareQuota: 1024
    enabledProtocols: 'NFS'
    rootSquash: 'NoRootSquash'
  }
  dependsOn: [
    nfsFilesStorageAccount
  ]
}

output nfs_home_ip string = 'nfsfiles${resourcePostfix}'
output nfs_home_path string = '/nfsfiles${resourcePostfix}/home'

{% endif %}
