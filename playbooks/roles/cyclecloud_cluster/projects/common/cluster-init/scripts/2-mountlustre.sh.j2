#!/bin/bash

lustre_vm=lustre
lustre_mount=/lustre

# exit if lustre module is not installed
modinfo lustre >&/dev/null || exit 0

max_retry=5
delay=5

attempt=1
while true; do
    if modprobe lustre; then
        break
    else
        if (( attempt <= max_retry )) ; then
            echo "Unable to mount lustre. Retry $attempt of $max_retry ..."
            (( attempt++ ))
            sleep $delay
        else
            echo "Unable to mount lustre. Exiting..."
            exit 0
        fi
    fi
done

mkdir $lustre_mount
echo "${lustre_vm}@tcp0:/LustreFS $lustre_mount lustre flock,defaults,_netdev 0 0" >> /etc/fstab
mount -a
chmod 777 $lustre_mount
