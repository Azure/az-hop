#!/bin/bash
script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source "$script_dir/../files/azhop-helpers.sh" 
read_os

find $script_dir/../files -name "*.sh" -exec chmod +x {} \;

$script_dir/../files/$os_release/init_mountnfs.sh

{% for mount in mounts %}
mkdir {{mount.mountpoint}}
echo "mount {{ mount.server }}:/{{ mount.export }} {{mount.mountpoint}}"
mount -t nfs -o {{ mount.options | default("rw,hard,rsize=262144,wsize=262144,vers=3,tcp",true) }} {{ mount.server }}:/{{ mount.export }} {{mount.mountpoint}} || exit 1
{% endfor %}
